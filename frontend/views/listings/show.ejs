


<% layout("/layouts/boilerplate.ejs") %>
<body>
    <br>


<% if (success && success.length > 0) { %>
    <div class="flash success"><%= success %></div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="flash error"><%= error %></div>
  <% } %>


  <div class="category-bar">
    <div class="category">
        <img class="section-images" src="https://etimg.etb2bimg.com/photo/98913352.cms" alt="">Mobiles</div>

    <div class="category">
        <img class="section-images" src="https://etimg.etb2bimg.com/photo/98913352.cms" alt="">Grocery</div>

        <div class="category">
            <img class="section-images" src="https://etimg.etb2bimg.com/photo/98913352.cms" alt="">Fashion</div>

            <div class="category">
                <img class="section-images" src="https://etimg.etb2bimg.com/photo/98913352.cms" alt="">Two-wheelers</div>

                <div class="category">
                    <img class="section-images" src="https://etimg.etb2bimg.com/photo/98913352.cms" alt="">Appliances</div>

                    <div class="category">
                        <img class="section-images" src="https://etimg.etb2bimg.com/photo/98913352.cms" alt="">Flight-bookings</div>

                        <div class="category">
                            <img class="section-images" src="https://etimg.etb2bimg.com/photo/98913352.cms" alt="">Mobiles</div>

</div>


    <div class="container">
        <% listings.forEach(function(listing) { %>
        <div class="product-card">
            <div class="product-image">
                <img src="<%= listing.image %>" alt="<%= listing.name %>" />


            </div>
            <div class="product-content">
                <h2 class="product-title"><%= listing.name %></h2>
                <p class="product-description"><%= listing.description %></p>
                <div class="price-section">
                    <p class="original-price">Before: <span>$166.56</span></p>
                    <p class="discounted-price">Price: $<%= listing.price %></p>
                </div>
                <div class="button-container">
                    <form action="/listing/product/<%= listing._id %>">
                        <button class="view-details-btn">See More</button>
                    </form>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <style>
  body {
    font-family: 'Segoe UI', Roboto, sans-serif;
    background-color: #f1f3f6;
    margin: 0;
    padding: 0;
    color: #212121;
}


.category-bar {
  display: flex;
  overflow-x: auto;
  background-color: #fff;
  box-shadow: 0 1px 2px rgba(0,0,0,0.1);
 gap: 20px;
  scrollbar-width: none;
  margin-top: 40px;
    margin-bottom: -30px;
    padding: 0px;
}

.category-bar::-webkit-scrollbar {
  display: none;
}

.category {
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 12px;
  font-weight: 500;
  color: #333;
  cursor: pointer;
  min-width: 100px;
}

.section-images {
  width: 150px;
  height: 150px;
  object-fit: contain;
  border-radius: 50%;
}


.container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
    padding: 2rem;
}

.product-card {
    background: #fff;
    border-radius: 6px;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.15);
    width: 260px;
    transition: 0.3s ease;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.product-card:hover {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
    transform: translateY(-2px);
}

.product-image img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.product-card:hover .product-image img {
    transform: scale(1.05);
}

.product-content {
    padding: 1rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.product-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #212121;
}

.product-description {
    font-size: 0.85rem;
    color: #757575;
    margin-bottom: 0.8rem;
    height: 40px;
    overflow: hidden;
}

.price-section {
    margin-bottom: 0.8rem;
}

.original-price {
    font-size: 0.85rem;
    color: #9e9e9e;
    text-decoration: line-through;
}

.discounted-price {
    font-size: 1.1rem;
    color: #388e3c;
    font-weight: 600;
}

.button-container {
    margin-top: auto;
    display: flex;
    justify-content: center;
}

.view-details-btn {
    background-color: #2874f0;
    color: #fff;
    border: none;
    padding: 0.6rem;
    font-size: 0.95rem;
    width: 100%;
    border-radius: 3px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.view-details-btn:hover {
    background-color: #1565c0;
}
    </style>
</body>
