<% layout("/layouts/boilerplate.ejs") %>
<body>
    <br>

    <div class="container">
        <% listings.forEach(function(listing) { %>
        <div class="product-card">
            <div class="product-image">
                <img src="<%= listing.image %>" alt="<%= listing.name %>" />
            </div>
            <div class="product-content">
                <h2 class="product-title"><%= listing.name %></h2>
                <p class="product-description"><%= listing.description %></p>
                <div class="price-section">
                    <p class="original-price">Before: <span>$166.56</span></p>
                    <p class="discounted-price">Price: $<%= listing.price %></p>
                </div>
                <div class="button-container">
                    <form action="/listing/product/<%= listing._id %>">
                        <button class="view-details-btn">See More</button>
                    </form>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 2rem;
            padding: 2rem;
        }

        .product-card {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 300px;
            height: 500px; /* Ensure all cards have the same height */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .product-card:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .product-image img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .product-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 1rem;
            text-align: left;
        }

        .product-title {
            font-size: 1.3rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .product-description {
            font-size: 0.9rem;
            color: #777;
            margin-bottom: 1rem;
            flex-grow: 1;
        }

        .price-section {
            margin-bottom: 1rem;
        }

        .original-price {
            font-size: 0.9rem;
            color: #999;
            text-decoration: line-through;
            margin: 0;
        }

        .discounted-price {
            font-size: 1.2rem;
            color: #c60000;
            font-weight: bold;
            margin: 0;
        }

        .button-container {
            display: flex;
            justify-content: center;
            margin-top: auto;
        }

        .view-details-btn {
            background-color: #f0c14b;
            color: #111;
            border: 1px solid #a88734;
            border-radius: 3px;
            font-size: 1rem;
            cursor: pointer;
            width: 100%;
            text-align: center;
        }
    </style>
</body>
